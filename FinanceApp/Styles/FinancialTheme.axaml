<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- Cores do tema financeiro -->
  <Styles.Resources>
    <!-- Cores principais -->
    <Color x:Key="DarkBackground">#FF1A1A1A</Color>
    <Color x:Key="MediumBackground">#FF2D2D30</Color>
    <Color x:Key="LightBackground">#FF3E3E42</Color>
    
    <!-- Amarelo financeiro (ouro) -->
    <Color x:Key="AccentYellow">#FFFFD700</Color>
    <Color x:Key="AccentYellowHover">#FFFFED4E</Color>
    <Color x:Key="AccentYellowPressed">#FFE6C200</Color>
    
    <!-- Textos -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#FFB8B8B8</Color>
    <Color x:Key="TextMuted">#FF808080</Color>
    
    <!-- Estados -->
    <Color x:Key="SuccessGreen">#FF4CAF50</Color>
    <Color x:Key="ErrorRed">#FFF44336</Color>
    <Color x:Key="WarningOrange">#FFFF9800</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackground}"/>
    <SolidColorBrush x:Key="MediumBackgroundBrush" Color="{StaticResource MediumBackground}"/>
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackground}"/>
    <SolidColorBrush x:Key="AccentYellowBrush" Color="{StaticResource AccentYellow}"/>
    <SolidColorBrush x:Key="AccentYellowHoverBrush" Color="{StaticResource AccentYellowHover}"/>
    <SolidColorBrush x:Key="AccentYellowPressedBrush" Color="{StaticResource AccentYellowPressed}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
  </Styles.Resources>

  <!-- Estilo para Window -->
  <Style Selector="Window">
    <Setter Property="Background" Value="{StaticResource DarkBackgroundBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    <Setter Property="FontFamily" Value="Segoe UI"/>
  </Style>

  <!-- Estilo para TextBlock -->
  <Style Selector="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
  </Style>

  <!-- Estilo para botões principais (amarelo) -->
  <Style Selector="Button.PrimaryButton">
    <Setter Property="Background" Value="{StaticResource AccentYellowBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource DarkBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentYellowBrush}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="24,16"/>
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
  </Style>

  <!-- Estilo para hover dos botões principais -->
  <Style Selector="Button.PrimaryButton:pointerover">
    <Setter Property="Background" Value="{StaticResource AccentYellowHoverBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentYellowHoverBrush}"/>
  </Style>

  <!-- Estilo para pressed dos botões principais -->
  <Style Selector="Button.PrimaryButton:pressed">
    <Setter Property="Background" Value="{StaticResource AccentYellowPressedBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentYellowPressedBrush}"/>
  </Style>

  <!-- Estilo para botões secundários -->
  <Style Selector="Button.SecondaryButton">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource AccentYellowBrush}"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="Padding" Value="24,16"/>
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
  </Style>

  <!-- Estilo para hover dos botões secundários -->
  <Style Selector="Button.SecondaryButton:pointerover">
    <Setter Property="Background" Value="{StaticResource LightBackgroundBrush}"/>
  </Style>

  <!-- Estilo para títulos grandes -->
  <Style Selector="TextBlock.Title">
    <Setter Property="FontSize" Value="32"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    <Setter Property="TextAlignment" Value="Center"/>
  </Style>

  <!-- Estilo para subtítulos -->
  <Style Selector="TextBlock.Subtitle">
    <Setter Property="FontSize" Value="18"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    <Setter Property="TextAlignment" Value="Center"/>
  </Style>

  <!-- Estilo para ícones -->
  <Style Selector="TextBlock.Icon">
    <Setter Property="FontSize" Value="48"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <!-- Estilo para painéis com fundo -->
  <Style Selector="Border.Panel">
    <Setter Property="Background" Value="{StaticResource MediumBackgroundBrush}"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Padding" Value="32"/>
    <Setter Property="BorderBrush" Value="{StaticResource LightBackgroundBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>

</Styles>
