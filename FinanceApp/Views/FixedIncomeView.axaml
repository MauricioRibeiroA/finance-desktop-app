<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FinanceApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
        x:Class="FinanceApp.Views.FixedIncomeView"
        x:DataType="vm:FixedIncomeViewModel"
        Icon="/Assets/finance-icon.ico"
        Title="Renda Fixa - Finance Control"
        MinWidth="600" MinHeight="400"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Background -->
        <Border Background="{StaticResource DarkBackgroundBrush}"/>
        
        <!-- Conteúdo principal -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="40" Margin="50">
                
                <!-- Breadcrumb -->
                <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Left">
                    <Button Content="← Voltar" 
                            Classes="SecondaryButton" 
                            Click="OnBackClick"
                            Padding="12,8"
                            FontSize="14"/>
                    <TextBlock Text="Lançamentos > Tipo de Investimento > Renda Fixa" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               FontSize="14" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Cabeçalho -->
                <StackPanel Spacing="16" HorizontalAlignment="Center">
                    <TextBlock Text="🏦" Classes="Icon" Foreground="{StaticResource AccentYellowBrush}"/>
                    <TextBlock Text="RENDA FIXA" Classes="Title" Margin="0,0,0,8"/>
                    <TextBlock Text="Escolha o produto de renda fixa para registrar" 
                               Classes="Subtitle" 
                               Margin="0,0,0,24"/>
                </StackPanel>
                
                <!-- Painel central com opções -->
                <Border Classes="Panel" MaxWidth="600">
                    <StackPanel Spacing="32">
                        
                        <TextBlock Text="Qual produto de renda fixa você deseja lançar?" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   TextAlignment="Center"
                                   Margin="0,0,0,16"/>
                        
                        <!-- Botões de seleção -->
                        <Grid ColumnDefinitions="*,20,*" MaxWidth="500">
                            
                            <!-- Tesouro Direto -->
                            <Button Grid.Column="0" 
                                    Classes="PrimaryButton"
                                    Name="TesouroButton"
                                    Click="OnTesouroClick"
                                    MinHeight="120">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="🇧🇷" FontSize="36" HorizontalAlignment="Center"/>
                                    <TextBlock Text="TESOURO DIRETO" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Títulos públicos do governo brasileiro" 
                                               FontSize="12" 
                                               Opacity="0.8" 
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="Selic, IPCA+, Prefixado" 
                                               FontSize="11" 
                                               Opacity="0.6" 
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               FontStyle="Italic"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- CDB -->
                            <Button Grid.Column="2" 
                                    Classes="SecondaryButton"
                                    Name="CDBButton"
                                    Click="OnCDBClick"
                                    MinHeight="120">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="🏪" FontSize="36" HorizontalAlignment="Center"/>
                                    <TextBlock Text="CDB / LCI / LCA" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Títulos de bancos e instituições financeiras" 
                                               FontSize="12" 
                                               Opacity="0.8" 
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="CDI, Prefixado, etc." 
                                               FontSize="11" 
                                               Opacity="0.6" 
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               FontStyle="Italic"/>
                                </StackPanel>
                            </Button>
                            
                        </Grid>
                        
                    </StackPanel>
                </Border>
                
                <!-- Informação adicional -->
                <Border Background="{StaticResource MediumBackgroundBrush}" 
                        CornerRadius="8" 
                        Padding="20" 
                        MaxWidth="600">
                    <StackPanel Spacing="12">
                        <TextBlock Text="💡 Diferenças principais:" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource AccentYellowBrush}"/>
                        <TextBlock Text="• Tesouro Direto: Títulos do governo, 100% garantidos pelo Tesouro Nacional"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="• CDB/LCI/LCA: Títulos de bancos, cobertos pelo FGC até R$ 250mil por CPF/instituição"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>

</Window>
