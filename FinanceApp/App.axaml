<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FinanceApp.App"
             xmlns:local="using:FinanceApp"
             RequestedThemeVariant="Dark">
             <!-- Usando tema dark para combinar com nosso tema financeiro -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/FinancialTheme.axaml"/>
    </Application.Styles>
</Application>